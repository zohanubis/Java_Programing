package GUI;

import javax.swing.*;
import java.awt.*;

public class OrganizerDashboard extends JFrame {
    private JButton btnManagePapers;
    private JButton btnManageReviews;
    private JButton btnAssignReviewers;
    private JButton btnSendNotifications;

    public OrganizerDashboard() {
        setTitle("Organizer Dashboard");
        setSize(400, 300);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        
        JPanel panel = new JPanel();
        panel.setLayout(new GridLayout(4, 1, 10, 10));
        getContentPane().add(panel);
        
        btnManagePapers = new JButton("Manage Papers");
        panel.add(btnManagePapers);
        
        btnManageReviews = new JButton("Manage Reviews");
        panel.add(btnManageReviews);
        
        btnAssignReviewers = new JButton("Assign Reviewers");
        panel.add(btnAssignReviewers);
        
        btnSendNotifications = new JButton("Send Notifications");
        panel.add(btnSendNotifications);
    }
    
    public static void main(String[] args) {
        SwingUtilities.invokeLater(() -> {
            OrganizerDashboard frame = new OrganizerDashboard();
            frame.setVisible(true);
        });
    }
}
