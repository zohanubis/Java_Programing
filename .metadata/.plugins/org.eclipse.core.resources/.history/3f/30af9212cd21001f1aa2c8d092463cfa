package GUI;

import javax.swing.*;
import java.awt.*;

public class AuthorForm extends JFrame {
    private JTextField txtName;
    private JTextField txtAffiliation;
    private JTextField txtEmail;
    private JCheckBox chkContactAuthor;

    public AuthorForm() {
        setTitle("Author Registration");
        setSize(400, 200);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        
        JPanel panel = new JPanel();
        panel.setLayout(new GridLayout(5, 2, 10, 10));
        getContentPane().add(panel);
        
        panel.add(new JLabel("Name:"));
        txtName = new JTextField();
        panel.add(txtName);
        
        panel.add(new JLabel("Affiliation:"));
        txtAffiliation = new JTextField();
        panel.add(txtAffiliation);
        
        panel.add(new JLabel("Email:"));
        txtEmail = new JTextField();
        panel.add(txtEmail);
        
        panel.add(new JLabel("Contact Author:"));
        chkContactAuthor = new JCheckBox();
        panel.add(chkContactAuthor);
        
        panel.add(new JLabel());
        JButton btnRegister = new JButton("Register");
        panel.add(btnRegister);
    }
    
    public static void main(String[] args) {
        SwingUtilities.invokeLater(() -> {
            AuthorForm frame = new AuthorForm();
            frame.setVisible(true);
        });
    }
}
