package GUI;

import javax.swing.*;
import java.awt.*;

public class PaperSubmissionForm extends JFrame {
    private JTextField txtTitle;
    private JTextField txtField;
    private JTextField txtAuthors;
    private JTextField txtContactAuthor;
    private JTextArea txtAbstract;
    private JTextField txtKeywords;
    private JButton btnUpload;
    private JButton btnSubmit;

    public PaperSubmissionForm() {
        setTitle("Paper Submission");
        setSize(500, 600);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        
        JPanel panel = new JPanel();
        panel.setLayout(new GridLayout(9, 2, 10, 10));
        getContentPane().add(panel);
        
        panel.add(new JLabel("Paper Title:"));
        txtTitle = new JTextField();
        panel.add(txtTitle);
        
        panel.add(new JLabel("Research Field:"));
        txtField = new JTextField();
        panel.add(txtField);
        
        panel.add(new JLabel("Authors (comma separated):"));
        txtAuthors = new JTextField();
        panel.add(txtAuthors);
        
        panel.add(new JLabel("Contact Author:"));
        txtContactAuthor = new JTextField();
        panel.add(txtContactAuthor);
        
        panel.add(new JLabel("Abstract:"));
        txtAbstract = new JTextArea();
        panel.add(new JScrollPane(txtAbstract));
        
        panel.add(new JLabel("Keywords (comma separated):"));
        txtKeywords = new JTextField();
        panel.add(txtKeywords);
        
        panel.add(new JLabel("Upload File:"));
        btnUpload = new JButton("Upload");
        panel.add(btnUpload);
        
        panel.add(new JLabel());
        btnSubmit = new JButton("Submit");
        panel.add(btnSubmit);
    }
    
    public static void main(String[] args) {
        SwingUtilities.invokeLater(() -> {
            PaperSubmissionForm frame = new PaperSubmissionForm();
            frame.setVisible(true);
        });
    }
}
